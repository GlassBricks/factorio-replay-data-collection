{
  "name": "factorio-mod",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@11.6.2",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "del-cli": "^7.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "factorio-test": "^2.0.0",
    "factorio-test-cli": "^2.0.0",
    "factoriomod-debug": "^2.0.9",
    "gb-tstl-utils": "^1.0.2",
    "lua-types": "^2.13.1",
    "prettier": "^3.6.2",
    "tstl-expect": "^0.4.6",
    "tsx": "^4.20.6",
    "typed-factorio": "^3.33.0",
    "typescript": "^5.9.3",
    "typescript-to-lua": "1.33.0",
    "typescript-eslint": "^8.47.0"
  },
  "type": "module",
  "scripts": {
    "clean": "del-cli out ./test-mod/**/*.lua",
    "build": "tstl -p tsconfig.release.json",
    "build-install": "tstl && ./install.sh",
    "build:test": "tstl -p tsconfig.test.json",
    "pretest": "npm run build:test",
    "test": "factorio-test run ./test-mod -- --graphics-quality very-low --cache-sprite-atlas true",
    "watch": "tstl -p tsconfig.release.json --watch",
    "watch:test": "tstl -p tsconfig.test.json --watch",
    "format:fix": "prettier --write src",
    "format:check": "prettier --check src",
    "lint": "eslint src",
    "check-clean-tree": "git diff --exit-code HEAD --",
    "check": "npm run format:check && npm run lint"
  },
  "nodemonConfig": {
    "watch": [
      "src/locale/en/*.cfg"
    ],
    "ext": "*",
    "execMap": {
      "ts": "tsx"
    }
  }
}
